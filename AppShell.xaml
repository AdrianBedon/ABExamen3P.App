<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ABExamen3P.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ABExamen3P.ABViews"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:ABListadoDePokemon}"
        Route="MainPage"/>

    <FlyoutItem Route="ABMain" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Pokemones API"
            Icon="vehicle_icon.png"
            ContentTemplate="{DataTemplate local:ABListadoDePokemon}"/>
        <ShellContent
            Title="Mis Pokemones" 
            Icon="vehicles_icon.png"
            ContentTemplate="{DataTemplate local:ABListaLocal}"/>
    </FlyoutItem>

</Shell>
